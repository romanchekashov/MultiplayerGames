	--end
end

function init(self)
	log("init", self.color, self.map_level)
	local id = go.get_id()

	self.isServer = MainState.isServer

	if self.isServer then
		MainState.register_gameobject(0, id, MainState.FACTORY_TYPES.fuze)
	else
		msg.post("/broadsock", "register_gameobject", { id = id, type = MainState.FACTORY_TYPES.fuze })
		enable(self, true)
	end

	MainState.fuzesIdToColor[id] = self.color
	MainState.fuzeColorToMapLevel[self.color] = self.map_level
end

function final(self)
	if self.isServer then
		MainState.unregister_gameobject({ id = go.get_id() })
	else
		msg.post("/broadsock", "unregister_gameobject", { id = go.get_id() })
	end
end

function update(self, dt)
	if self.isServer then
		return
	end

	local player_uid_with_fuze = MainState.fuzeColorToPlayerUid:get(self.color) or 0
	local fuze_map_level = MainState.fuzeColorToMapLevel[self.color]
	local player = MainState.players:get(MainState.player.uid)

	if player ~= nil then
		local enabled = fuze_map_level == player.map_level and player_uid_with_fuze == 0 and MainState.fuzeBoxColorToState[self.color] == 0
		enable(self, enabled)
	end
end

