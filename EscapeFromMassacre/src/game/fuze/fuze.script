go.property("map_level", 0)

local colorToSpriteId = {
	[MainState.FUZE.RED] = "#fuze_red",
	[MainState.FUZE.GREEN] = "#fuze_green",
	[MainState.FUZE.BLUE] = "#fuze_blue",
	[MainState.FUZE.YELLOW] = "#fuze_yellow"
}

local function enable(self, enabled)

	msg.post("#fuze_red", "disable")
	msg.post("#fuze_green", "disable")
	msg.post("#fuze_blue", "disable")
	msg.post("#fuze_yellow", "disable")

	-- log("enable", enabled, self.color, colorToSpriteId[self.color])
	self.enable = enabled

	if enabled then
		msg.post("#collisionobject", "enable")
		msg.post(colorToSpriteId[self.color], "enable")
	else
		msg.post("#collisionobject", "disable")
		msg.post(colorToSpriteId[self.color], "disable")
	end
